#!/bin/bash

# Make sure this is not run using sudo
if [ $(id -u) -eq 0 ]
then
echo 'ERROR: This script should not be run as sudo or root.'
    exit
fi

# Generate SSH key (once)
if [ ! -r "$HOME/.ssh/id_rsa" ]
then
ssh-keygen -t rsa
fi

# Make sure the key is configured properly
ssh-add ~/.ssh/id_rsa

# Install curl, git
sudo apt-get install -y curl git-core